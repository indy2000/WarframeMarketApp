<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_background">

    <View
        android:id="@+id/div_narket_sort"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_item_quantity"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txv_market_sort_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/div_narket_sort"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Sort by"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:textColor="@color/grey_item_quantity" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txv_market_sort_label"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_market_sort_user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_high_reputation_opacity"
                android:text="Online Status"
                android:textColor="#FFC1C1C1"
                app:icon="@android:drawable/arrow_up_float"
                app:iconTint="@color/green_high_reputation"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:shapeAppearance="@style/roundedButtonShape"
                app:strokeColor="@color/green_high_reputation"
                app:strokeWidth="1dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_market_sort_reputation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_high_reputation_opacity"
                app:layout_constraintStart_toEndOf="@id/btn_market_sort_user_status"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Reputation"
                android:textColor="#FFC1C1C1"
                app:icon="@android:drawable/arrow_down_float"
                app:iconGravity="textEnd"
                app:iconTint="@color/lighter_orange"
                android:textAllCaps="false"
                android:layout_marginHorizontal="10dp"
                app:shapeAppearance="@style/roundedButtonShape"
                app:strokeColor="@color/green_high_reputation"
                app:strokeWidth="1dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_market_sort_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_high_reputation_opacity"
                app:layout_constraintStart_toEndOf="@id/btn_market_sort_reputation"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Unit price"
                android:textColor="#FFC1C1C1"
                app:icon="@android:drawable/arrow_up_float"
                android:textAllCaps="false"
                android:layout_marginHorizontal="10dp"
                app:shapeAppearance="@style/roundedButtonShape"
                app:strokeColor="@color/green_high_reputation"
                app:strokeWidth="1dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_market_sort_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_high_reputation_opacity"
                app:layout_constraintStart_toEndOf="@id/btn_market_sort_price"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Quantity"
                android:textColor="#FFC1C1C1"
                app:icon="@android:drawable/arrow_up_float"
                android:textAllCaps="false"
                android:layout_marginHorizontal="10dp"
                app:shapeAppearance="@style/roundedButtonShape"
                app:strokeColor="@color/green_high_reputation"
                app:strokeWidth="1dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>