<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:padding="15dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Type"
        android:id="@+id/txt_view_dialog_market_order_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_dialog_market_order_type"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:id="@+id/rad_group_dialog_market_order_type">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyers"
            android:textColor="@color/asset_teal"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="4dp"
            android:id="@+id/rad_btn_dialog_market_buyers"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sellers"
            android:textColor="@color/pink"
            android:paddingHorizontal="10dp"
            android:id="@+id/rad_btn_dialog_market_sellers"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online Status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rad_group_dialog_market_order_type"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_view_dialog_market_online_status"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_dialog_market_online_status"
        android:orientation="horizontal"
        android:id="@+id/rad_group_dialog_market_online_status">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:textColor="@color/asset_teal"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="4dp"
            android:id="@+id/rad_btn_dialog_market_status_all"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On Site"
            android:textColor="@color/asset_teal"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="4dp"
            android:id="@+id/rad_btn_dialog_market_status_on_site"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Game"
            android:textColor="@color/asset_teal"
            android:paddingHorizontal="10dp"
            android:id="@+id/rad_btn_dialog_market_status_in_game"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_reputation"
        app:layout_constraintTop_toBottomOf="@id/rad_group_dialog_market_online_status"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/view_dialog_market"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Price"
        android:id="@+id/txt_view_dialog_market_max_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_dialog_market"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:hint="Max"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@color/grey_reputation"
        android:textColor="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/view_dialog_market"
        app:layout_constraintStart_toEndOf="@+id/txt_view_dialog_market_max_price"
        android:layout_marginStart="10dp"
        android:paddingHorizontal="10dp"
        android:id="@+id/edit_text_dialog_market_max_price"
        android:inputType="number"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Platinum"
        android:id="@+id/txt_view_dialog_market_max_price_platinum"
        app:layout_constraintStart_toEndOf="@+id/edit_text_dialog_market_max_price"
        app:layout_constraintTop_toBottomOf="@+id/view_dialog_market"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min Price"
        android:id="@+id/txt_view_dialog_market_min_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_dialog_market_max_price"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:hint="0"
        android:textSize="16sp"
        android:background="@color/grey_reputation"
        android:textColor="@color/orange"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_dialog_market_max_price"
        app:layout_constraintStart_toEndOf="@+id/txt_view_dialog_market_min_price"
        android:layout_marginStart="10dp"
        android:paddingHorizontal="10dp"
        android:id="@+id/edit_text_dialog_market_min_price"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Platinum"
        android:id="@+id/txt_view_dialog_market_min_price_platinum"
        app:layout_constraintStart_toEndOf="@+id/edit_text_dialog_market_min_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_dialog_market_max_price_platinum"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        app:layout_constraintTop_toBottomOf="@id/txt_view_dialog_market_min_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_dialog_market_close"
        android:id="@+id/btn_dialog_market_confirm"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/asset_teal"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Close"
        app:layout_constraintTop_toBottomOf="@id/txt_view_dialog_market_min_price"
        app:layout_constraintStart_toEndOf="@id/btn_dialog_market_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btn_dialog_market_close"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/pink"/>


</androidx.constraintlayout.widget.ConstraintLayout>