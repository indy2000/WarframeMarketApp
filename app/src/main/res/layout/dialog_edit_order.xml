<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/dark_background"
        android:padding="10dp"
        android:id="@+id/const_layout_dialog_edit_order">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_alpha"
            android:id="@+id/image_view_dialog_edit_order"
            app:layout_constraintStart_toStartOf="@id/const_layout_dialog_edit_order"
            app:layout_constraintTop_toTopOf="@id/const_layout_dialog_edit_order"
            app:layout_constraintBottom_toBottomOf="parent">

        </ImageView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:text="XAKU PRIME BLUEPRINT"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_view_dialog_edit_order"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/txt_view_dialog_edit_order_item_desc"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:scrollHorizontally="true">

        </TextView>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/orange"
            android:id="@+id/image_button_dialog_edit_order_close">

        </ImageButton>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:id="@+id/const_layout_dialog_edit_order2"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Order"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/const_layout_dialog_edit_order2"
            app:layout_constraintTop_toTopOf="@id/const_layout_dialog_edit_order2"
            android:id="@+id/txt_view_dialog_edit_order">

        </TextView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/asset_teal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/view2_dialog_edit_order"
            app:layout_constraintTop_toBottomOf="@+id/txt_view_dialog_edit_order"/>
        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visibility:"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view2_dialog_edit_order"
            app:layout_constraintStart_toStartOf="@+id/const_layout_dialog_edit_order2"
            android:id="@+id/txt_view_dialog_edit_order_init_visibility">

        </TextView>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/txt_view_dialog_edit_order_init_visibility"
            app:layout_constraintStart_toStartOf="@+id/const_layout_dialog_edit_order2"
            android:id="@+id/rad_group_dialog_edit_order_visibility">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visible"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/rad_btn_dialog_edit_order_visible"
                android:layout_marginEnd="10dp">
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hidden"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/rad_btn_dialog_edit_order_hidden">

            </RadioButton>
        </RadioGroup>
        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price per unit"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/rad_group_dialog_edit_order_visibility"
            app:layout_constraintStart_toStartOf="@id/const_layout_dialog_edit_order2"
            android:id="@+id/txt_view_dialog_edit_order_item_price">

        </TextView>

        <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grey_item_quantity"
            android:textColor="@color/grey_item_quantity"
            android:backgroundTint="@color/grey_item_quantity"
            android:hint="e.g. 120"
            android:inputType="number"
            android:maxLength="4"
            app:layout_constraintTop_toBottomOf="@+id/txt_view_dialog_edit_order_item_price"
            app:layout_constraintStart_toStartOf="@+id/const_layout_dialog_edit_order2"
            android:id="@+id/edit_text_dialog_edit_order_price">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/rad_group_dialog_edit_order_visibility"
            app:layout_constraintStart_toEndOf="@id/txt_view_dialog_edit_order_item_price"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txt_view_dialog_edit_order_item_quantity">

        </TextView>

        <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="e.g. 3"
            android:textColorHint="@color/grey_item_quantity"
            android:textColor="@color/grey_item_quantity"
            android:backgroundTint="@color/grey_item_quantity"
            android:inputType="number"
            android:maxLength="4"
            app:layout_constraintTop_toBottomOf="@+id/txt_view_dialog_edit_order_item_quantity"
            app:layout_constraintStart_toEndOf="@+id/edit_text_dialog_edit_order_price"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/edit_text_dialog_edit_order_quantity"
            android:layout_marginLeft="25dp">

        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/asset_teal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/view3_dialog_edit_order"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_dialog_edit_order_quantity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:backgroundTint="@color/asset_teal"
            app:layout_constraintTop_toBottomOf="@+id/view3_dialog_edit_order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_dialog_edit_order_close"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_dialog_edit_order_post">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/orange"
            app:layout_constraintEnd_toEndOf="@id/const_layout_dialog_edit_order2"
            app:layout_constraintTop_toBottomOf="@id/view3_dialog_edit_order"
            app:layout_constraintStart_toEndOf="@id/btn_dialog_edit_order_post"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn_dialog_edit_order_close"
            android:layout_marginTop="10dp">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>