<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Fragment_Profile"
    android:orientation="vertical"
    android:background="@color/dark_background">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/dark_background"
        android:id="@+id/contraint_fragment_profile"
        android:visibility="gone">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_alpha"
            android:id="@+id/image_view_fragment_profile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            app:layout_constraintStart_toEndOf="@+id/image_view_fragment_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt_fragment_profile_reputation"
            android:layout_marginStart="10dp"
            android:id="@+id/txt_fragment_profile_username"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reputation"
            app:layout_constraintStart_toEndOf="@+id/image_view_fragment_profile"
            app:layout_constraintTop_toBottomOf="@id/txt_fragment_profile_username"
            android:layout_marginStart="10dp"
            android:id="@+id/txt_fragment_profile_reputation_label"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reputation_value"
            app:layout_constraintStart_toEndOf="@+id/txt_fragment_profile_reputation_label"
            app:layout_constraintTop_toBottomOf="@id/txt_fragment_profile_username"
            android:layout_marginStart="10dp"
            android:id="@+id/txt_fragment_profile_reputation"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/platform"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/txt_fragment_profile_platform"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@id/txt_fragment_profile_platform"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:id="@+id/txt_fragment_profile_language"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/profile_shimmer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:visibility="visible"
        app:shimmer_auto_start="false">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/contraint_fragment_profile_shimmer">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@color/asset_teal"
                android:id="@+id/image_view_fragment_profile_shimmer"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@color/asset_teal"
                app:layout_constraintStart_toEndOf="@+id/image_view_fragment_profile_shimmer"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:id="@+id/txt_fragment_profile_username_shimmer"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@color/asset_teal"
                app:layout_constraintStart_toEndOf="@+id/image_view_fragment_profile_shimmer"
                app:layout_constraintTop_toBottomOf="@id/txt_fragment_profile_username_shimmer"
                android:layout_marginStart="10dp"
                android:id="@+id/txt_fragment_profile_reputation_label_shimmer"
                android:layout_marginTop="5dp"/>



            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@color/asset_teal"
                android:textAllCaps="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/txt_fragment_profile_platform_shimmer"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@color/asset_teal"
                android:textAllCaps="true"
                app:layout_constraintTop_toBottomOf="@id/txt_fragment_profile_platform_shimmer"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                android:id="@+id/txt_fragment_profile_language_shimmer"
                android:layout_marginTop="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>


    <include layout="@layout/profile_buttons"
        />

    <ProgressBar
        android:id="@+id/loading_frag_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true"
        android:indeterminateTint="@color/asset_teal"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_fragment_profile"
        android:background="@color/dark_background"
        android:padding="10dp"
        tools:listitem="@layout/card_view_fragment_profile_order">

    </androidx.recyclerview.widget.RecyclerView>



</androidx.appcompat.widget.LinearLayoutCompat>